<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Divisas.Views.Configuracion"
             Title="Configuracion">
    <ScrollView
        x:Name="scrollConfiguration"
        Grid.Row="1"
        VerticalOptions="FillAndExpand">
        <VerticalStackLayout Padding="20"
                Spacing="20">
            <Frame BorderColor="LightGray"
                    HeightRequest="150"
                    CornerRadius="10"
                    Padding="10">
                <StackLayout HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand">
                    <Image Source="load.png" HeightRequest="80" /> 
                    <Label Text="Drop your image here, or browse"
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="Gray"/>
                </StackLayout>
            </Frame>
            <Label Text="Nombre del Negocio"/>
            <Entry Placeholder="Nombre del negocio ..."/>
            <Label Text="Dirección"/>
            <Entry Placeholder="Dirección (Av. Calle 1234, CP 637462, Mex)"/>
            <Label Text="Estado"/>
            <Picker Title="Selecciona el Estado"
                    TitleColor="Gray">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Coahuila</x:String>
                        <x:String>Chihuahua</x:String>
                        <x:String>Nuevo León</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Label Text="Ciudad"/>
            <Entry Placeholder="Ciudad..."/>
            <Button Text="Guardar"
                    BackgroundColor="Teal"
                    TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>